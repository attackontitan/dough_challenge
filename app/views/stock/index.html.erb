<%= stylesheet_link_tag "stock" %>

<h1>Stocks</h1>
<!--<br>-->
<div class="row collapse">
  <div class="large-6 column">
    <%= form_tag stock_index_path, :method => :get do %>
        <div class="row collapse">
          <div class="small-10 columns">
            <%= text_field_tag :search, params[:search], :placeholder => "Stock Symbol or Name" %>
          </div>
          <div class="small-2 column">
            <%= submit_tag "Search", :name => nil, :class => "button" %>
          </div>
        </div>
    <% end %>

  </div>
  <div class="large-6 column">
    <div class="row collapse">
      <div class="small-3 column"><%= link_to "Clear All", '/', :class => 'button', :id => "clear", :style => '' %></div>
    </div>
  </div>
</div>

<% if @empty_query %>
    <div>Please input the text to query.</div>
<% end %>
<% unless @searched.blank? %>
    <div class="row">
      <div class="large-6 column">
        <h3> <%= @count %> Found</h3>
      </div>
      <div class="large-6 column">
        <h3><%= page_entries_info @searched %></h3>
      </div>
    </div>
    <%= render 'stock/list' %>
    <%= will_paginate @searched %>
<% else %>
    <% unless @start || @empty_query %>
        <div>Well......Cannot find it.</div>
    <% end %>
<% end %>