
<h3>Stocks</h3>
<br>
<div class="row">
  <%= form_tag stock_index_path, :method => :get do %>
      <div class="large-6 ">
        <div class="row collapse">
          <div class="small-10 columns">
            <%= text_field_tag :search, params[:search], :placeholder => "Stock Symbol or Name" %>
          </div>
          <div class="small-2 columns">
            <%= submit_tag "Search", :name => nil, :class => "button postfix" %>
          </div>
        </div>
      </div>
  <% end %>
</div>